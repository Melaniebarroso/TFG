RewriteEngine On
RewriteBase /TFG-1/

# Si la URL apunta a un directorio pero no tiene '/', redirigir agregando '/'
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule (.*) %{REQUEST_URI}/ [R=301,L]

# Si la URL es un archivo real, permitir el acceso
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Si la URL es una carpeta real, permitir el acceso
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirigir todas las dem√°s solicitudes a index.php
RewriteRule ^(.*)$ index.php?route=$1 [L,QSA]
