RewriteEngine On

# Si la URL apunta a un directorio pero no tiene '/', redirigir agregando '/'
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule (.*) %{REQUEST_URI}/ [R=301,L]

# EXCEPCIÓN para cualquier carpeta dentro del root
RewriteCond %{REQUEST_URI} ^/(blog|educacion|espectaculos|tienda|contacto)/ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Redirigir todas las demás solicitudes al index.php principal
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=$1 [L,QSA]
